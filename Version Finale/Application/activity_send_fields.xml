<?xml version="1.0" encoding="utf-8"?>

<!--
Visuel de l'application à savoir:

                        - Interface avec les 16 carrés de couleur
                        - Bouton Annuler
                        - Bouton Envoyer

-->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <!-- Bouton Envoyer -->
    <Button
        android:id="@+id/V"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Y"
        android:layout_toRightOf="@+id/Y"
        android:text="V" />

    <!-- Bouton Annuler -->
    <Button
        android:id="@+id/X"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V"
        android:layout_toRightOf="@+id/Y"
        android:text="X" />

    <!-- Grille qui va contenir les carrés-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Y"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="67dp">

        <!-- Déclaration d'un carré -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DEE5E4"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
